<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net7.0;net6.0;</TargetFrameworks>
	<Nullable>enable</Nullable>
	<ImplicitUsings>disable</ImplicitUsings>
	<RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
	<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
	<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
	<SignAssembly>false</SignAssembly>
	<AssemblyOriginatorKeyFile>Workshell.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

	<PropertyGroup>
		<PackageId>SharpAssassin</PackageId>
		<PackageDescription>A class library for interacting with SpamAssassin and performing commands against it.</PackageDescription>
		<PackageProjectUrl>https://github.com/Workshell/sharpassassin</PackageProjectUrl>
		<PackageIconUrl>http://img.workshell.co.uk/github/sharpassassin/logo.png</PackageIconUrl>
		<PackageTags>workshell spam assassom spamassassin</PackageTags>
		<PackageLicenseFile>license.txt</PackageLicenseFile>
		<Copyright>Workshell Ltd</Copyright>
		<Authors>Workshell Ltd</Authors>
		<RepositoryUrl>https://github.com/Workshell/sharpassassin</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<Version>0.0.0.1</Version>
	</PropertyGroup>
	<ItemGroup>
		<None Include="..\..\license.txt" Pack="true" PackagePath="$(PackageLicenseFile)" />
	</ItemGroup>

</Project>
